<p id="notice"><%= notice %></p>

<p>Name: <%= @comic.name %></p>
<p>Author: <%= @comic.author.try!(:name) %></p>
<p>Artist: <%= @comic.artist.try!(:name) %></p>

<div class="reviews">
  <% @comic.reviews.each do |review| %>
    <div class="review">
      <p>Comment: <%= review.comment %></p>
      <p>Art: <%= review.art_stars %></p>
      <p>Story: <%= review.story_stars %></p>
    </div>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_comic_path(@comic) %> |
<% end %>
<%= link_to 'Back', comics_path %>
